<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_02"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="130dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/flor_final08"
            android:layout_marginTop="42mm"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26mm"
            android:id="@+id/iprincipal">
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:onClick="initCall"
                app:srcCompat="@drawable/flor_final01" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignLeft="@id/iprincipal"
            android:layout_alignParentStart="true"
            android:layout_marginTop="34mm"
            android:layout_marginLeft="7mm">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:onClick="beneficio"
                app:srcCompat="@drawable/flor_final06" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignRight="@id/iprincipal"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="34mm"
            android:layout_marginRight="7mm">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="125dp"
                android:layout_height="125dp"
                app:srcCompat="@drawable/flor_final02" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="63mm"
            android:id="@+id/iprincipal2">
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="125dp"
                android:layout_height="125dp"
                app:srcCompat="@drawable/flor_final04" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignLeft="@id/iprincipal2"
            android:layout_alignParentStart="true"
            android:layout_marginTop="55mm"
            android:layout_marginLeft="7mm">
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="125dp"
                android:layout_height="125dp"
                app:srcCompat="@drawable/flor_final05" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignRight="@id/iprincipal2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="55mm"
            android:layout_marginRight="7mm">
            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:onClick="asesoria"
                app:srcCompat="@drawable/flor_final03" />
        </RelativeLayout>
    </RelativeLayout>




</RelativeLayout>